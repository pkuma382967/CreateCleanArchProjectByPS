{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.ContextRollingFile",
      "Serilog.Sinks.Async"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Default": "Information",
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Apilogs\\QA1\\Block-API-Core\\Information.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd'T'HH:mm:ss.fff} {ApplicationName} CorrelationId: {CorrelationId} [{Level}] {MachineName} ({ThreadId}) {Message} {Information} {NewLine}",
          "fileSizeLimitBytes": "10485760",
          "rollingInterval": "Day",
          "retainedFileCountLimit": "150",
          "rollOnFileSizeLimit": "true",
          "shared": "true",
          "flushToDiskInterval": "00:00:01",
          "restrictedToMinimumLevel": "Information"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Apilogs\\QA1\\Block-API-Core\\Error.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd'T'HH:mm:ss.fff} {ApplicationName} {CorrelationId} [{Level}] {MachineName} ({ThreadId}) {Message} {Exception} {NewLine}",
          "fileSizeLimitBytes": "10485760",
          "rollingInterval": "Day",
          "retainedFileCountLimit": "70",
          "rollOnFileSizeLimit": "true",
          "shared": "true",
          "flushToDiskInterval": "00:00:01",
          "restrictedToMinimumLevel": "Error"
        }
      }
    ]
  }
}
